<h2 class="mb-4">Jouw Notities</h2>

<form method="post" action="/notes" class="mb-4">
  <div class="mb-3">
    <input type="text" name="title" class="form-control" placeholder="Titel" required />
  </div>
  <button type="submit" class="btn btn-success w-100">Toevoegen</button>
</form>

<ul class="list-group">
  {{#each notes}}
    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
      <a href="/notes/{{id}}" class="fw-bold text-decoration-none">{{title}}</a>
      <form method="post" action="/notes/delete/{{id}}" onsubmit="return confirm('Weet je het zeker?');">
        <button type="submit" class="btn btn-danger btn-sm mt-2">Verwijderen</button>
      </form>
    </li>
  {{/each}}
</ul>
